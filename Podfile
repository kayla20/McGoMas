# platform :ios, '9.0'

target 'McGoMas' do
  # Comment the next line if you don't want to use dynamic frameworks
  # use_frameworks!

  # Pods for McGoMas

  # Firebase pod for Authentication
  pod 'Firebase/Auth'
  pod 'Firebase/Analytics'
  # Firebase pod for Database
  pod 'Firebase/Database'
  # Pod for using gifs
